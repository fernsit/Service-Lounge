    <t t-name="ServiceVehicle">
        <div class="item">
            <p id="veh_number"><t t-esc="item.vehicle_details"/></p>
            <p id="veh_customer"><t t-esc="item.customer_id[1]"/></p>
            <t t-if="item.state=='2_service'">
                <p id="veh_state">On Service</p>
            </t>
            <!--<p id="veh_name"><t t-esc="item.name"/></p>-->
        </div>
    </t>
    <t t-name="ServiceVehicle2">
        <div class="item2">
            <p id="veh_number"><t t-esc="item.vehicle_details"/></p>
            <p id="veh_customer"><t t-esc="item.customer_id[1]"/></p>
            <t t-if="item.state=='3_ready'">
                <p id="veh_state">Ready for pick up</p>
            </t>
            <!--<p id="veh_name"><t t-esc="item.name"/></p>-->
        </div>
    </t>
