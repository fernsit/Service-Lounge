<templates xml:space="preserve">
    <t t-name="HomePage">
        <div class="homepage">

            <div class="launch_header">
                <div class="row">
                    <div class="col-xs-12" id="service_name_div">

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12" id="LB1">
                    <strong><p id="on_service">ON SERVICE</p></strong>
                </div>
            </div>

            <div class="cust_launch">
            </div>

            <div class="row">
                <div class="col-xs-12" id="LB2">
